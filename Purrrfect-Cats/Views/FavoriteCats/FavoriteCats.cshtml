@model List<FavoriteCatsModel>

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">Favorite Cats</h1>
    </div>

    <div class="text-center mt-4">
        <img src="https://cf.ltkcdn.net/cats/cat-breeds/images/std/325488-800x515-ragdoll-cat-breed.webp" class="img-fluid rounded-circle" alt="Ragdoll Cat" style="max-width: 300px;">
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="text-center mt-4">
            <p class="lead">You haven't added any cats to your list yet!</p>
        </div>
    }
    else
    {
        <form method="post">
            @foreach (var FavoriteCat in Model)
            {
                <div class="card text-center mt-4">
                    <div class="card-body">
                        <h4 class="card-title">@FavoriteCat.BreedName</h4>
                        <input class="form-check-input" type="checkbox" value="@FavoriteCat.Id" name="catId">
                    </div>
                </div>
            }
            <div class="text-center mt-4">
                <a class="btn btn-primary" asp-area="" asp-controller="Breeds" asp-action="Breeds">Add A Breed</a>
                <input type="submit" value="Delete Selected Cats" class="btn btn-danger" asp-controller="FavoriteCats" asp-action="Delete">
            </div>
        </form>
    }
</div>
