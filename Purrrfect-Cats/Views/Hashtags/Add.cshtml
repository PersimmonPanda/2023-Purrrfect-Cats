@model Purrrfect_Cats.Models.Hashtag

<h1>Add New Hashtag</h1>

<form asp-controller="Hashtags" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="TagName"></label>
        <input asp-for="TagName" />
        <span asp-validation-for="TagName"></span>
    </div>
    <input type="submit" value="Add Hashtag" />
    <div>
         <input type="submit" value="Delete Selected Hash" class="btn btn-danger text-center"  asp-controller="HashTags" asp-action="Delete">
    </div>
</form>