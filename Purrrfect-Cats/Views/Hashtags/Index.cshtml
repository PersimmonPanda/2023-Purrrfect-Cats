@model List<Purrrfect_Cats.Models.Hashtag>

   <form method="post">
@if (Model.Count == 0)
{
    <p>No tags yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Tag Name</th>
        </tr>
        @foreach (var hashtags in Model)
        {
            <tr>
                <td>@hashtags.Id  <input class="form-check-input" type="checkbox" value="@hashtags.Id" name="hashid"></td>
                <td><a asp-controller="Hashtags" asp-action="Detail" asp-route-id="@hashtags.Id">@hashtags.TagName</a></td>
            </tr>
        }
    </table>
}
<a class="nav-link text-primary" asp-area="" asp-controller="Hashtags" asp-action="Add">Add a Hashtag!</a>
 <input type="submit" value="Delete Selected Cats" class="btn btn-danger text-center"  asp-controller="Hashtags" asp-action="Delete">
 </form>